<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="rootPane" 
            styleClass="root-pane" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.DB.databaseproject.controller.CustomerSignupController">
   
   <!-- Split Layout Container - Fully Responsive -->
   <HBox spacing="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" 
         AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
      
      <!-- LEFT SIDE: Sign-Up Form -->
      <ScrollPane fitToWidth="true" fitToHeight="true" 
                  hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                  styleClass="scroll-pane"
                  prefWidth="550.0" minWidth="500.0">
         
         <VBox fx:id="signupCard" alignment="CENTER" 
               spacing="15.0" styleClass="signup-card">
            
            <!-- Logo Container -->
            <StackPane styleClass="logo-container">
               <Label text="S" styleClass="logo-text" />
            </StackPane>
            
            <!-- Title -->
            <Label text="Create Account" styleClass="signup-title-main" />
            
            <!-- Subtitle -->
            <Label text="Join Stone Sales Management System" styleClass="signup-subtitle" />
            
            <!-- Input Fields Container -->
            <VBox spacing="12" styleClass="input-container" maxWidth="450.0" prefWidth="450.0">
               
               <!-- Full Name Field -->
               <VBox spacing="6.0">
                  <Label text="Full Name *" styleClass="input-label" />
                  <TextField fx:id="fullNameField" promptText="Enter your full name" 
                             styleClass="text-field" />
               </VBox>
               
               <!-- Username Field -->
               <VBox spacing="6.0">
                  <Label text="Username *" styleClass="input-label" />
                  <TextField fx:id="usernameField" promptText="Choose a username (no spaces)" 
                             styleClass="text-field" />
               </VBox>
               
               <!-- Password Field -->
               <VBox spacing="6.0">
                  <Label text="Password *" styleClass="input-label" />
                  <PasswordField fx:id="passwordField" promptText="Create a strong password" 
                                 styleClass="password-field" />
               </VBox>
               
               <!-- Confirm Password Field -->
               <VBox spacing="6.0">
                  <Label text="Confirm Password *" styleClass="input-label" />
                  <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" 
                                 styleClass="password-field" />
               </VBox>
               
               <!-- Phone Number Field -->
               <VBox spacing="6.0">
                  <Label text="Phone Number *" styleClass="input-label" />
                  <TextField fx:id="phoneField" promptText="Enter phone number (digits only)" 
                             styleClass="text-field" />
               </VBox>
               
               <!-- Address Field -->
               <VBox spacing="6.0">
                  <Label text="Address *" styleClass="input-label" />
                  <TextField fx:id="addressField" promptText="Enter your address" 
                             styleClass="text-field" />
               </VBox>
               
               <!-- Email Field (Optional) -->
               <VBox spacing="6.0">
                  <Label text="Email (optional)" styleClass="input-label-optional" />
                  <TextField fx:id="emailField" promptText="Enter your email address" 
                             styleClass="text-field" />
               </VBox>
               
               <!-- Error Message Label (hidden by default) -->
               <Label fx:id="errorLabel" styleClass="error-label" 
                      text="Please fix the errors above" 
                      visible="false" managed="false" wrapText="true" />
               
               <!-- Success Message Label (hidden by default) -->
               <Label fx:id="successLabel" styleClass="success-label" 
                      text="Registration successful!" 
                      visible="false" managed="false" wrapText="true" />
               
               <!-- Buttons Container -->
               <HBox spacing="15" alignment="CENTER">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
                  
                  <!-- Register Button -->
                  <Button fx:id="registerButton" 
                          text="REGISTER" 
                          styleClass="register-button" 
                          onAction="#handleRegister"
                          prefWidth="200" prefHeight="45"
                          maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                  
                  <!-- Cancel Button -->
                  <Button fx:id="cancelButton" 
                          text="CANCEL" 
                          styleClass="cancel-button" 
                          onAction="#handleCancel"
                          prefWidth="150" prefHeight="45"
                          maxWidth="Infinity" HBox.hgrow="ALWAYS" />
               </HBox>
               
            </VBox>
            
            <!-- Back to Login Link -->
            <HBox alignment="CENTER" spacing="5">
               <Label text="Already have an account?" styleClass="back-to-login-text" />
               <Label fx:id="backToLoginLink" text="Sign in" styleClass="back-to-login-link" 
                      onMouseClicked="#handleCancel" />
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Footer -->
            <Label text="Stone Sales Management System" styleClass="footer-text">
               <VBox.margin>
                  <Insets top="5.0" bottom="30.0" />
               </VBox.margin>
            </Label>
            
            <padding>
               <Insets top="40.0" right="50.0" bottom="20.0" left="50.0" />
            </padding>
         </VBox>
      </ScrollPane>
      
      <!-- RIGHT SIDE: Stone Background Image - Flexible Width -->
      <StackPane fx:id="imagePane" styleClass="stone-background-pane"
                 HBox.hgrow="ALWAYS">
         
         <!-- Background Image -->
         <Rectangle fx:id="overlayRectangle" styleClass="overlay-rectangle" />
         
         <!-- Branding Text on Stone Background -->
         <VBox alignment="CENTER" spacing="15" styleClass="brand-container">
            <Label text="Join Us" styleClass="brand-text-small" />
            <Label text="Stone Sales" styleClass="brand-text-large" />
            <Label text="Management System" styleClass="brand-text-medium" />
            <Label text="Start Your Journey" styleClass="brand-text-accent" />
         </VBox>
         
      </StackPane>
      
   </HBox>
   
</AnchorPane>
