<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.DB.databaseproject.controller.EmployeesController"
      alignment="TOP_LEFT" spacing="20.0" styleClass="view-container"
      prefWidth="-1" prefHeight="-1"
      maxWidth="Infinity" maxHeight="Infinity">
   
   <padding>
      <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
   </padding>
   
   <!-- Title Area -->
   <VBox spacing="8">
      <Label text="Employees Management" styleClass="view-title" />
      <Label text="View, add, edit, and remove employees" styleClass="view-subtitle" />
   </VBox>
   
   <!-- Search and Action Bar -->
   <HBox spacing="15" alignment="CENTER_LEFT">
      
      <!-- Search TextField -->
      <TextField fx:id="searchField" 
                 promptText="Search employees..."
                 styleClass="search-field"
                 prefWidth="300.0" />
      
      <!-- Search Button -->
      <Button text="Search" 
              styleClass="btn-secondary"
              onAction="#onSearchEmployee" />
      
      <!-- Spacer -->
      <Region HBox.hgrow="ALWAYS" />
      
      <!-- Add Employee Button -->
      <Button text="+ Add Employee" 
              styleClass="btn-primary"
              onAction="#onAddEmployee" />
   </HBox>
   
   <!-- Employee TableView -->
   <TableView fx:id="employeesTable" 
              styleClass="employees-table"
              VBox.vgrow="ALWAYS"
              prefWidth="Infinity" maxWidth="Infinity">
      
      <!-- Employee ID Column -->
      <columns>
         <TableColumn fx:id="idColumn" 
                     text="Employee ID" 
                     prefWidth="100.0"
                     styleClass="table-column-header" />
         
         <!-- Full Name Column -->
         <TableColumn fx:id="nameColumn" 
                     text="Full Name" 
                     prefWidth="180.0"
                     styleClass="table-column-header" />
         
         <!-- Phone Column -->
         <TableColumn fx:id="phoneColumn" 
                     text="Phone" 
                     prefWidth="130.0"
                     styleClass="table-column-header" />
         
         <!-- Address Column -->
         <TableColumn fx:id="addressColumn" 
                     text="Address" 
                     prefWidth="150.0"
                     styleClass="table-column-header" />
         
         <!-- Salary Column -->
         <TableColumn fx:id="salaryColumn" 
                     text="Salary" 
                     prefWidth="100.0"
                     styleClass="table-column-header" />
         
         <!-- Date Hired Column -->
         <TableColumn fx:id="dateHiredColumn" 
                     text="Date Hired" 
                     prefWidth="120.0"
                     styleClass="table-column-header" />
         
         <!-- Actions Column -->
         <TableColumn fx:id="actionsColumn" 
                     text="Actions" 
                     prefWidth="150.0"
                     styleClass="table-column-header"
                     sortable="false" />
      </columns>
      
   </TableView>
   
</VBox>
