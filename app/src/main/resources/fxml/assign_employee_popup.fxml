<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.DB.databaseproject.controller.AssignEmployeeController"
      styleClass="dialog-container"
      spacing="20"
      prefWidth="520"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30; -fx-background-radius: 10;">

    <!-- Title -->
    <Label fx:id="titleLabel" text="Assign Employee to Order" 
           styleClass="dialog-title"
           style="-fx-text-fill: #d4c59e; -fx-font-size: 22px; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="22.0"/>
        </font>
    </Label>

    <Separator styleClass="dialog-separator" style="-fx-background-color: #3d3d3d;"/>

    <!-- Order Info Card -->
    <VBox styleClass="dialog-card info-card" 
          spacing="10" 
          style="-fx-background-color: rgba(203, 181, 122, 0.1); -fx-background-radius: 10; -fx-border-color: rgba(203, 181, 122, 0.3); -fx-border-width: 1; -fx-border-radius: 10; -fx-padding: 20;">
        <Label fx:id="orderInfoLabel" text="Order #0 - Customer Name" 
               styleClass="info-card-title"
               style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <Label fx:id="currentEmployeeLabel" text="Current: Unassigned" 
               styleClass="info-card-subtitle"
               style="-fx-text-fill: #cccccc; -fx-font-size: 14px;"/>
    </VBox>

    <!-- Employee Selection -->
    <VBox spacing="12">
        <Label text="Select Employee:" 
               styleClass="dialog-label"
               style="-fx-text-fill: #ffffff; -fx-font-size: 15px; -fx-font-weight: bold;"/>
        
        <ComboBox fx:id="employeeComboBox" 
                  promptText="Choose an employee..."
                  styleClass="dialog-combo-box"
                  style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10 15; -fx-font-size: 14px;"
                  prefWidth="460" 
                  minWidth="460" 
                  maxWidth="10000" 
                  prefHeight="45">
        </ComboBox>
        
        <Label text="ðŸ’¡ Tip: Select an available employee to handle this order" 
               style="-fx-text-fill: #888888; -fx-font-size: 12px; -fx-font-style: italic;"/>
    </VBox>

    <!-- Action Buttons - FIXED: Proper sizing to prevent truncation -->
    <HBox spacing="18" alignment="CENTER_RIGHT" style="-fx-padding: 15 0 0 0;">
        <Button fx:id="assignButton" 
                text="Assign Employee" 
                onAction="#handleAssign"
                styleClass="gold-button"
                style="-fx-background-color: #d2bb72; -fx-text-fill: #1e1e1e; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 12 22; -fx-background-radius: 15; -fx-cursor: hand;"
                minWidth="-1"
                prefWidth="200" 
                maxWidth="10000">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Button>
        <Button fx:id="cancelButton" 
                text="Cancel" 
                onAction="#handleCancel"
                styleClass="gray-button"
                style="-fx-background-color: #6E6E6E; -fx-text-fill: #ffffff; -fx-font-size: 15px; -fx-font-weight: 600; -fx-padding: 12 22; -fx-background-radius: 15; -fx-cursor: hand;"
                minWidth="-1"
                prefWidth="140" 
                maxWidth="10000">
            <font>
                <Font name="System" size="15.0"/>
            </font>
        </Button>
    </HBox>

</VBox>
