<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.DB.databaseproject.controller.EmployeeFormController"
      spacing="20"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;">

    <!-- Title -->
    <Label fx:id="formTitle" text="Add New Employee" 
           style="-fx-text-fill: #d4c59e; -fx-font-size: 24px; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Separator style="-fx-background-color: #3d3d3d;"/>

    <!-- Form Content in ScrollPane -->
    <ScrollPane fitToWidth="true" 
                style="-fx-background: transparent; -fx-background-color: transparent;"
                VBox.vgrow="ALWAYS">
        <content>
            <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints minWidth="250" prefWidth="300" hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- User Account Information -->
                <Label text="USER ACCOUNT INFORMATION" 
                       style="-fx-text-fill: #d4c59e; -fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                <!-- Username -->
                <Label text="Username:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="usernameField" promptText="Enter username"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Password -->
                <Label text="Password:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <HBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <PasswordField fx:id="passwordField" promptText="Enter password"
                                  style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                                  HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="visiblePasswordField" promptText="Enter password"
                              style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                              visible="false" managed="false"
                              HBox.hgrow="ALWAYS"/>
                    <Button fx:id="togglePasswordButton" 
                            text="ðŸ‘" 
                            onAction="#togglePasswordVisibility"
                            style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-padding: 8 12; -fx-background-radius: 5; -fx-cursor: hand;"
                            prefWidth="40" prefHeight="40"/>
                </HBox>

                <!-- Confirm Password -->
                <Label text="Confirm Password:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <HBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password"
                                  style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                                  HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="visibleConfirmPasswordField" promptText="Confirm password"
                              style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                              visible="false" managed="false"
                              HBox.hgrow="ALWAYS"/>
                    <Button fx:id="toggleConfirmPasswordButton" 
                            text="ðŸ‘" 
                            onAction="#toggleConfirmPasswordVisibility"
                            style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-padding: 8 12; -fx-background-radius: 5; -fx-cursor: hand;"
                            prefWidth="40" prefHeight="40"/>
                </HBox>
                
                <!-- Change Password Checkbox (Edit Mode Only) -->
                <Label text="" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <CheckBox fx:id="changePasswordCheckBox" 
                         text="âœï¸  Change Password" 
                         visible="false"
                         style="-fx-text-fill: #d4c59e; -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand;"
                         GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <padding>
                        <Insets top="5" bottom="5"/>
                    </padding>
                </CheckBox>

                <Separator style="-fx-background-color: #3d3d3d;"
                          GridPane.columnSpan="2" GridPane.rowIndex="5"/>

                <!-- Personal Information -->
                <Label text="PERSONAL INFORMATION" 
                       style="-fx-text-fill: #d4c59e; -fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.rowIndex="6"/>

                <!-- First Name -->
                <Label text="First Name:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="firstNameField" promptText="Enter first name"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <!-- Middle Name -->
                <Label text="Middle Name:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                <TextField fx:id="middleNameField" promptText="Enter middle name (optional)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                <!-- Last Name -->
                <Label text="Last Name:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <TextField fx:id="lastNameField" promptText="Enter last name"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="9"/>

                <!-- Email -->
                <Label text="Email:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                <TextField fx:id="emailField" promptText="Enter email address"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="10"/>

                <!-- Phone Number -->
                <Label text="Phone Number:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="11"/>
                <TextField fx:id="phoneNumberField" promptText="10 digits (e.g., 0599123456)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="11"/>

                <!-- Address -->
                <Label text="Address:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="12"/>
                <TextField fx:id="addressField" promptText="Enter address"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="12"/>

                <Separator style="-fx-background-color: #3d3d3d;"
                          GridPane.columnSpan="2" GridPane.rowIndex="13"/>

                <!-- Employee Information -->
                <Label text="EMPLOYMENT INFORMATION" 
                       style="-fx-text-fill: #d4c59e; -fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.rowIndex="14"/>

                <!-- Salary -->
                <Label text="Salary:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="15"/>
                <TextField fx:id="salaryField" promptText="Enter salary (e.g., 3500.00)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="15"/>

                <!-- Date Hired -->
                <Label text="Date Hired:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="16"/>
                <DatePicker fx:id="dateHiredPicker"
                           style="-fx-background-color: #3d3d3d; -fx-control-inner-background: #3d3d3d; -fx-text-fill: #ffffff; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5;"
                           GridPane.columnIndex="1" GridPane.rowIndex="16"/>

            </GridPane>
        </content>
    </ScrollPane>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="saveButton" text="Save Employee" onAction="#handleSave"
                style="-fx-background-color: #d4c59e; -fx-text-fill: #2b2b2b; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"
                prefWidth="180" minWidth="180">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 5; -fx-cursor: hand;"
                prefWidth="120" minWidth="120">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </HBox>

</VBox>
