<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.DB.databaseproject.controller.EmployeeOrdersController"
      alignment="TOP_LEFT" spacing="20.0" styleClass="view-container"
      prefWidth="-1" prefHeight="-1"
      maxWidth="Infinity" maxHeight="Infinity">
   
   <padding>
      <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
   </padding>
   
   <!-- Title Area -->
   <VBox spacing="8">
      <Label text="Assigned Orders" styleClass="view-title" />
      <Label text="Orders assigned to you" styleClass="view-subtitle" />
   </VBox>
   
   <!-- Orders TableView -->
   <TableView fx:id="ordersTable" 
              styleClass="orders-table"
              VBox.vgrow="ALWAYS"
              prefWidth="Infinity" maxWidth="Infinity">
      
      <columns>
         <!-- Order ID Column -->
         <TableColumn fx:id="idColumn" 
                     text="Order ID" 
                     prefWidth="100.0"
                     styleClass="table-column-header" />
         
         <!-- Customer Name Column -->
         <TableColumn fx:id="customerColumn" 
                     text="Customer Name" 
                     prefWidth="200.0"
                     styleClass="table-column-header" />
         
         <!-- Order Date Column -->
         <TableColumn fx:id="dateColumn" 
                     text="Order Date" 
                     prefWidth="120.0"
                     styleClass="table-column-header" />
         
         <!-- Status Column -->
         <TableColumn fx:id="statusColumn" 
                     text="Status" 
                     prefWidth="150.0"
                     styleClass="table-column-header" />
         
         <!-- Total Amount Column -->
         <TableColumn fx:id="totalColumn" 
                     text="Total Amount" 
                     prefWidth="130.0"
                     styleClass="table-column-header" />
         
         <!-- Actions Column -->
         <TableColumn fx:id="actionsColumn" 
                     text="Actions" 
                     prefWidth="200.0"
                     styleClass="table-column-header"
                     sortable="false" />
      </columns>
      
   </TableView>
   
</VBox>
