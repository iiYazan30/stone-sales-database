<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.DB.databaseproject.controller.RequestCustomStoneController"
      alignment="CENTER" spacing="20" styleClass="dialog-container"
      prefWidth="500" prefHeight="550"
      style="-fx-background-color: #1F1F1F; -fx-padding: 30;">
   
   <Label text="Request Custom Stone" styleClass="dialog-title" 
          style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #C2B280;"/>
   
   <Label text="Request a stone that doesn't exist in our catalog" 
          style="-fx-font-size: 13px; -fx-text-fill: #CCCCCC;"/>
   
   <VBox spacing="15" VBox.vgrow="ALWAYS">
      
      <VBox spacing="8">
         <Label text="Stone Type *" style="-fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-font-weight: bold;"/>
         <TextField fx:id="stoneTypeField" promptText="e.g., Marble, Granite, Quartz" 
                   style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888888; 
                          -fx-background-radius: 5px; -fx-padding: 10px; -fx-font-size: 13px;"/>
      </VBox>
      
      <VBox spacing="8">
         <Label text="Size *" style="-fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-font-weight: bold;"/>
         <TextField fx:id="sizeField" promptText="e.g., 12x24 inches, 30x60 cm" 
                   style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888888; 
                          -fx-background-radius: 5px; -fx-padding: 10px; -fx-font-size: 13px;"/>
      </VBox>
      
      <VBox spacing="8">
         <Label text="Quantity *" style="-fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-font-weight: bold;"/>
         <Spinner fx:id="quantitySpinner" editable="true"
                 style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-background-radius: 5px;"/>
      </VBox>
      
      <VBox spacing="8" VBox.vgrow="ALWAYS">
         <Label text="Description *" style="-fx-text-fill: #FFFFFF; -fx-font-size: 13px; -fx-font-weight: bold;"/>
         <TextArea fx:id="descriptionArea" promptText="Describe the stone you need (color, pattern, finish, etc.)" 
                  wrapText="true" prefRowCount="5"
                  style="-fx-background-color: #2A2A2A; -fx-text-fill: #FFFFFF; -fx-prompt-text-fill: #888888; 
                         -fx-background-radius: 5px; -fx-padding: 10px; -fx-font-size: 13px; -fx-control-inner-background: #2A2A2A;"/>
      </VBox>
      
   </VBox>
   
   <Label text="* Required fields" style="-fx-text-fill: #888888; -fx-font-size: 11px; -fx-font-style: italic;"/>
   
   <HBox spacing="15" alignment="CENTER">
      <Button fx:id="submitButton" text="Submit Request" onAction="#handleSubmit"
              prefWidth="180"
              style="-fx-background-color: #C2B280; -fx-text-fill: #1F1F1F; -fx-font-size: 14px; 
                     -fx-font-weight: bold; -fx-background-radius: 6px; -fx-padding: 12px 20px; -fx-cursor: hand;"/>
      
      <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
              prefWidth="120"
              style="-fx-background-color: transparent; -fx-text-fill: #C2B280; -fx-font-size: 14px; 
                     -fx-font-weight: bold; -fx-background-radius: 6px; -fx-padding: 12px 20px; 
                     -fx-border-color: #C2B280; -fx-border-width: 2px; -fx-border-radius: 6px; -fx-cursor: hand;"/>
   </HBox>
   
</VBox>
