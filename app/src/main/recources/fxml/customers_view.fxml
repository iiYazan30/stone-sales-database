<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.DB.databaseproject.controller.CustomersController"
      alignment="TOP_LEFT" spacing="20.0" styleClass="view-container"
      prefWidth="-1" prefHeight="-1"
      maxWidth="Infinity" maxHeight="Infinity">
   
   <padding>
      <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
   </padding>
   
   <!-- Title Area -->
   <VBox spacing="8">
      <Label text="Customers" styleClass="view-title" />
      <Label text="View registered customers" styleClass="view-subtitle" />
   </VBox>
   
   <!-- Search Bar -->
   <HBox spacing="15" alignment="CENTER_LEFT">
      
      <!-- Search TextField -->
      <TextField fx:id="searchField" 
                 promptText="Search customers..."
                 styleClass="search-field"
                 prefWidth="300.0" />
      
      <!-- Search Button -->
      <Button text="Search" 
              styleClass="btn-secondary"
              onAction="#onSearchCustomer" />
   </HBox>
   
   <!-- Customers TableView (Read-Only) -->
   <TableView fx:id="customersTable" 
              styleClass="customers-table"
              VBox.vgrow="ALWAYS"
              editable="false"
              prefWidth="Infinity" maxWidth="Infinity">
      
      <columns>
         <!-- Customer ID Column -->
         <TableColumn fx:id="idColumn" 
                     text="Customer ID" 
                     prefWidth="120.0"
                     styleClass="table-column-header"
                     editable="false" />
         
         <!-- Full Name Column -->
         <TableColumn fx:id="nameColumn" 
                     text="Full Name" 
                     prefWidth="250.0"
                     styleClass="table-column-header"
                     editable="false" />
         
         <!-- Phone Number Column -->
         <TableColumn fx:id="phoneColumn" 
                     text="Phone Number" 
                     prefWidth="180.0"
                     styleClass="table-column-header"
                     editable="false" />
         
         <!-- Address Column -->
         <TableColumn fx:id="addressColumn" 
                     text="Address" 
                     prefWidth="280.0"
                     styleClass="table-column-header"
                     editable="false" />
      </columns>
      
   </TableView>
   
</VBox>
