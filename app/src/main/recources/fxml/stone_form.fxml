<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.DB.databaseproject.controller.StoneFormController"
      spacing="20"
      style="-fx-background-color: #2b2b2b; -fx-padding: 30;">

    <!-- Title -->
    <Label fx:id="formTitle" text="Add New Stone" 
           style="-fx-text-fill: #d4c59e; -fx-font-size: 24px; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Separator style="-fx-background-color: #3d3d3d;"/>

    <!-- Form Content in ScrollPane -->
    <ScrollPane fitToWidth="true" 
                style="-fx-background: transparent; -fx-background-color: transparent;"
                VBox.vgrow="ALWAYS">
        <content>
            <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints minWidth="150" prefWidth="150"/>
                    <ColumnConstraints minWidth="250" prefWidth="350" hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- Stone Information Section -->
                <Label text="STONE INFORMATION" 
                       style="-fx-text-fill: #d4c59e; -fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                <!-- Name -->
                <Label text="Name:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" promptText="Enter stone name (e.g., Marble, Granite)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Type -->
                <Label text="Type:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="typeField" promptText="Enter stone type (e.g., Natural, Engineered)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Size -->
                <Label text="Size:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="sizeField" promptText="Enter size (e.g., Large, 2x3 meters)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Separator style="-fx-background-color: #3d3d3d;"
                          GridPane.columnSpan="2" GridPane.rowIndex="4"/>

                <!-- Pricing and Stock Section -->
                <Label text="PRICING &amp; STOCK" 
                       style="-fx-text-fill: #d4c59e; -fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.rowIndex="5"/>

                <!-- Price Per Unit -->
                <Label text="Price Per Unit:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="priceField" promptText="Enter price (e.g., 150.00)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <!-- Quantity in Stock -->
                <Label text="Quantity in Stock:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <TextField fx:id="quantityField" promptText="Enter quantity (e.g., 100)"
                          style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                          GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                <Separator style="-fx-background-color: #3d3d3d;"
                          GridPane.columnSpan="2" GridPane.rowIndex="8"/>

                <!-- Image Section -->
                <Label text="IMAGE (Optional)" 
                       style="-fx-text-fill: #d4c59e; -fx-font-size: 16px; -fx-font-weight: bold;"
                       GridPane.columnSpan="2" GridPane.rowIndex="9"/>

                <!-- Image Path -->
                <Label text="Image Path:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"
                       GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="10">
                    <TextField fx:id="imagePathField" promptText="Image path or URL (optional)"
                              style="-fx-background-color: #3d3d3d; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888; -fx-border-color: #555555; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"
                              HBox.hgrow="ALWAYS"/>
                    <Button fx:id="browseButton" text="Browse..." onAction="#handleBrowseImage"
                            style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-font-size: 13px; -fx-padding: 8 15; -fx-background-radius: 5; -fx-cursor: hand;"
                            minWidth="100"/>
                </HBox>

            </GridPane>
        </content>
    </ScrollPane>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="saveButton" text="Save Stone" onAction="#handleSave"
                style="-fx-background-color: #d4c59e; -fx-text-fill: #2b2b2b; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 5; -fx-cursor: hand; -fx-min-width: 180px;"
                prefWidth="180" minWidth="180">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Button>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #555555; -fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-padding: 12 30; -fx-background-radius: 5; -fx-cursor: hand; -fx-min-width: 120px;"
                prefWidth="120" minWidth="120">
            <font>
                <Font size="14.0"/>
            </font>
        </Button>
    </HBox>

</VBox>
