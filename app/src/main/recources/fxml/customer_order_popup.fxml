<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.DB.databaseproject.controller.CustomerOrderPopupController"
      alignment="CENTER" 
      spacing="20.0" 
      styleClass="order-popup-container"
      prefWidth="450.0">
   
   <padding>
      <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
   </padding>
   
   <!-- Title -->
   <Label text="Place Order" styleClass="popup-title" />
   
   <!-- Stone Image -->
   <ImageView fx:id="stoneImageView" 
              fitWidth="200.0" 
              fitHeight="200.0" 
              preserveRatio="true"
              styleClass="popup-stone-image" />
   
   <!-- Stone Details Container -->
   <VBox spacing="8" alignment="CENTER">
      
      <!-- Stone Name -->
      <Label fx:id="stoneNameLabel" 
             text="Stone Name" 
             styleClass="popup-stone-name" />
      
      <!-- Stone Type -->
      <Label fx:id="stoneTypeLabel" 
             text="Type: [type]" 
             styleClass="popup-stone-detail" />
      
      <!-- Stone Size -->
      <Label fx:id="stoneSizeLabel" 
             text="Size: [size]" 
             styleClass="popup-stone-detail" />
      
      <!-- Stone Price -->
      <Label fx:id="stonePriceLabel" 
             text="Price: \$0.00 per unit" 
             styleClass="popup-stone-price" />
   
   </VBox>
   
   <!-- Quantity Input Section -->
   <HBox spacing="15" alignment="CENTER">
      
      <!-- Quantity Label -->
      <Label text="Quantity:" styleClass="popup-quantity-label" />
      
      <!-- Quantity Spinner -->
      <Spinner fx:id="quantitySpinner" 
               editable="true"
               prefWidth="100.0"
               styleClass="popup-spinner" />
   
   </HBox>
   
   <!-- Total Price Display -->
   <VBox spacing="5" alignment="CENTER">
      <Label text="Total:" styleClass="popup-total-label" />
      <Label fx:id="totalPriceLabel" 
             text="\$0.00" 
             styleClass="popup-total-price" />
   </VBox>
   
   <!-- Buttons Container -->
   <HBox spacing="15" alignment="CENTER">
      
      <!-- Confirm Order Button -->
      <Button fx:id="confirmButton"
              text="Confirm Order" 
              styleClass="btn-confirm-order"
              onAction="#handleConfirmOrder"
              minWidth="150.0"
              prefWidth="150.0"
              minHeight="45.0"
              prefHeight="45.0" />
      
      <!-- Cancel Button -->
      <Button fx:id="cancelButton"
              text="Cancel" 
              styleClass="btn-cancel-order"
              onAction="#handleCancelOrder"
              minWidth="100.0"
              prefWidth="100.0"
              minHeight="45.0"
              prefHeight="45.0" />
   
   </HBox>
   
</VBox>